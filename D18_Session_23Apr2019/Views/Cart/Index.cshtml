@model IEnumerable<D18_Session_23Apr2019.Models.CartItem>

@{
    ViewData["Title"] = "Index";
}

<h2>Giỏ hàng</h2>
<table class="table">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Tên</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HangMua.HangHoaId</td>
                <td>@item.HangMua.TenHangHoa</td>
                <td>@item.SoLuong</td>
                <td>@item.HangMua.DonGia</td>
                <td>@item.ThanhTien</td>
                <td>
                    <a asp-action="Remove" asp-route-id="@item.HangMua.HangHoaId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
